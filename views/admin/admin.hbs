                            <table class="table table-dark table-hover text-center">
                                <thead>
                                    <tr class="text-muted">
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                {{#if postResults}}
                                    {{#each postResults}}
                                        <tbody>
                                            <tr>
                                                <th>{{this.post_id}}</th>
