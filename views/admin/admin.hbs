    <section>
        <div class="container-fluid">
            <div class="row mb-5">
                <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
                    <div class="row ">
                        <div class="col-xl-6 col-12 mb-4 mb-xl-0">
                            <h3 class="text-muted text-center mb-3">CW Users</h3>
                            <table class="table table-striped bg-light text-center">
                                <thead>
                                    <tr class="text-muted">
                                        <th>#</th>
                                        <th>Surname</th>
                                        <th>Firstname</th>
                                        <th>Contact</th>
                                    </tr>
                                </thead>
                                {{#if results}}
                                    {{#each results}}
                                        <tbody>
                                            <tr>
                                                <th>{{this.user_id}}</th>
                                                <td>{{this.surname}}</td>
                                                <td>{{this.firstname}}</td>
                                                <td><button type="button" class="btn btn-info btn-sm">Message</button></td>
                                            </tr>
                                        </tbody>
                                    {{/each}}
                                {{else}}
                                    <h3> No Users Yet... </h3>
                                {{/if}}
